@model NewsFeed.Models.News

@{
    ViewData["Title"] = "Edit";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/ckeditor/ckeditor.js"></script>
<h1>Edit</h1>
<h4>News</h4>
<hr />


<section class="tab-content container-fluid">
    <div class="form-check-w3layout">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div class="panel-body">
                        <div class="form">
                            <form asp-action="Edit" class="cmxform form-horizontal" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label col-lg-3">Description</label>
                                    <div class="col-lg-6">
                                        <textarea id="editor" class="ckeditor" asp-for="Description" name="Description"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label col-lg-3">Name</label>
                                    <div class="col-lg-6">
                                        <input asp-for="Name" class="form-control" name="Name" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Image" accept="image/*" />
                                </div>
                                <div class="form-group">
                                    <label>Choose category:</label>
                                    <select asp-for="Category.CategoryName">
                                        <option value="IT">IT</option>
                                        <option value="Politics">Politics</option>
                                        <option value="Sport">Sport</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-3 col-lg-6">
                                        <button class="btn btn-primary" type="submit" asp-action="Edit" asp-controller="News">Edit</button>
                                        <button class="btn btn-danger" type="button">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</section>

<script>
    $(document).ready(function () {
        CKEDITOR.replace('#editor');
    });
</script>

